<%= form_for(@user) do |f| %>
	<div class="field">
		<p>Name</p>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<p>Email</p>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<p>Password</p>
		<%= f.text_field :password%>
	</div>
	<div class="field">
		<p>Confirm Password</p>
		<%= f.text_field :password_confirmation%>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>